<!doctype html>
<html>
<head>
	<title>Gerenciamento de Alunos</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
</head>
<body>
	<% include ../menus/administrador %>
    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">

        	<% if(mensagem){ %>
				<div class="alert alert-<%= mensagem.tipo %> alert-dismissible" role="alert">
				  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
				  	<span aria-hidden="true">&times;</span>
				  </button>
				  <i class="glyphicon glyphicon-exclamation-sign"></i> <%= mensagem.texto %>
				</div>
			<% } 
				var aluno = lista[0].lista;
				var totalPaginas = lista[1].totalPaginas;
			%>

            <h1><span class="glyphicon glyphicon-cog"></span> Gerenciamento</h1>

			<div class="panel panel-default">
				<div class="panel-heading"><i class="glyphicon glyphicon-list-alt"></i> Listagem de alunos</div>
				<table class="table">
					<thead>
						<tr>
							<th>ID</th>
							<th>Nome</th>
							<th>Curso</th>
							<th>Ações</th>
						</tr>
					</thead>
					<tbody>
						<% for(var i=0; i<aluno.length; i++){ %>
						<tr>
							<td><%= aluno[i].id %></td>
							<td><%= aluno[i].nome %></td>
							<td><%= aluno[i].curso %></td>
							<td>
							<div class="btn-group btn-group-xs" role="group" aria-label="...">
							  <a href="/alunos/editar?id=<%= aluno[i].id %>" class="btn btn-primary"><i class="glyphicon glyphicon-pencil"></i> Editar</a>
							  <a href="/alunos/apagar?id=<%= aluno[i].id %>" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i> Apagar</a>
						  	</div>
							</td>
						</tr>
						<% } %>
					</tbody>
				</table>
			</div>

				<nav aria-label="Page navigation">
				  <ul class="pagination">
				    <li>
				      <a href="#" aria-label="Previous">
				        <span aria-hidden="true">&laquo;</span>
				      </a>
				    </li>
				<% for(var i=1; i < totalPaginas+1; i++){ %>
				    <li><a href="/lista/?pagina=<%= i %>"><%= i %></a></li>
				<% } %>
				    <li>
				      <a href="#" aria-label="Next">
				        <span aria-hidden="true">&raquo;</span>
				      </a>
				    </li>
				  </ul>
				</nav>

		</div>
	</div>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"  crossorigin="anonymous"></script>
</body>
</html>
